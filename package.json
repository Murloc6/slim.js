{
  "name": "slim-js",
  "version": "5.0.0-beta",
  "description": "Superpower Web Components",
  "type": "module",
  "files": ["./dist/*.js"],
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.legacy.js",
      "default": "./dist/index.js"
    },
    "./decorators": {
      "default": "./dist/decorators.js"
    }
  },
  "scripts": {
    "build:module": "esbuild src/index.js --bundle --outfile=dist/index.js --format=esm --minify --sourcemap",
    "build:nomodule": "esbuild src/index.js --bundle --outfile=dist/index.legacy.js --format=iife --minify --global-name=Slim --sourcemap",
    "build:decorators": "esbuild src/decorators.js --bundle --outfile=dist/decorators.js --format=esm --minify",
    "build:types": "tsc",
    "build": "npm run build:module && npm run build:nomodule && npm run build:decorators",
    "test": "jest --config ./jest.config.js",
    "unittest": "mocha -r esm -r jsdom-global/register ./src/**/*.spec.js --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slimjs/slim.js.git"
  },
  "author": "Avichay Eyal <eavichay@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/slimjs/slim.js/issues"
  },
  "homepage": "http://slimjs.com",
  "keywords": [
    "web",
    "components",
    "binding"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "esmodules": true
          }
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "standard": {
    "globals": [
      "document",
      "window",
      "Document",
      "Event",
      "customElements",
      "HTMLElement",
      "Node"
    ]
  },
  "xdeps": {
    "babel-cli": "6.26.0",
    "babel-plugin-transform-custom-element-classes": "0.1.0",
    "babel-plugin-transform-es2015-classes": "6.24.1",
    "babel-preset-env": "1.7.0",
    "eslint": "5.5.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "mocha": "^5.2.0",
    "puppeteer": "^1.11.0",
    "static-server": "2.0.6",
    "@types/mocha": "8.2.2",
    "uglify-es": "3.1.5"
  },
  "devDependencies": {
    "@babel/core": "7.14.5",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/plugin-proposal-decorators": "7.14.5",
    "@babel/preset-env": "7.14.5",
    "@types/jest": "^26.0.23",
    "@types/node": "15.12.2",
    "esm": "3.2.25",
    "jest": "27.0.4",
    "jsdom-global": "3.0.2",
    "mocha": "9.0.0",
    "mocha-jsdom": "2.0.0",
    "puppeteer": "^10.0.0"
  },
  "dependencies": {}
}
