{
  "mount": {
    "public": "/",
    "src": "/src"
  },
  "buildOptions": {
    "sourcemap": true
  },
  "alias": {
    "slim-js": "../../src"
  },
  "workspaceRoot": "../../",
  "plugins": [
    [
      "@snowpack/plugin-babel",
      {
        "input": [".js"],
        "transformOptions": {
          "plugins": [
            ["@babel/plugin-proposal-decorators", { "legacy": true }],
            ["@babel/plugin-proposal-class-properties", { "loose": true }]
          ]
        }
      }
    ]
  ]
}
